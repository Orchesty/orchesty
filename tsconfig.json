{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "charset": "utf8",
    "noImplicitAny": true,
    "removeComments": false,
    "outDir": "dist/",
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
